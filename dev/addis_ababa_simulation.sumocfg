<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <input>
        <!-- Network file -->
        <net-file value="AddisAbaba.net.xml"/>
        
        <!-- Trip file with multiple vehicle types -->
        <route-files value="enhanced_trips.xml"/>
        
        <!-- Vehicle type definitions -->
        <vtype-files value="vehicle_types.xml"/>
    </input>

    <time>
        <!-- Simulation duration (24 hours in seconds) -->
        <begin value="0"/>
        <end value="86400"/>
        
        <!-- Time step in seconds -->
        <step-length value="1.0"/>
    </time>

    <processing>
        <!-- Number of threads for parallel processing -->
        <threads value="4"/>
        
        <!-- Collision detection -->
        <collision.action value="warn"/>
        
        <!-- Time to collision threshold -->
        <collision.mingap-factor value="0.5"/>
        
        <!-- Teleport settings -->
        <time-to-teleport value="300"/>
        <time-to-teleport.highways value="60"/>
        
        <!-- Departure settings -->
        <max-depart-delay value="900"/>
        <departlane value="free"/>
        <departpos value="base"/>
        <departspeed value="max"/>
    </processing>

    <routing>
        <!-- Routing algorithm -->
        <algorithm value="dijkstra"/>
        
        <!-- Route file output -->
        <route-files value="output_routes.xml"/>
        
        <!-- Trip info output -->
        <tripinfo-files value="tripinfo.xml"/>
    </routing>

    <report>
        <!-- Verbose output -->
        <verbose value="true"/>
        
        <!-- Print statistics -->
        <print-options value="false"/>
        
        <!-- No step logs (for performance) -->
        <no-step-log value="true"/>
    </report>

    <gui_only>
        <!-- GUI settings (only used if running with GUI) -->
        <gui-settings-file value="gui_settings.xml"/>
        
        <!-- Start time for GUI -->
        <start value="0"/>
        
        <!-- Delay between steps in GUI (ms) -->
        <delay value="50"/>
    </gui_only>

    <random_number>
        <!-- Random seed for reproducibility -->
        <seed value="42"/>
    </random_number>

    <tls>
        <!-- Traffic light settings -->
        <cycle.time value="90"/>
        <yellow.time value="3"/>
        <allred.time value="2"/>
    </tls>

    <pedestrian>
        <!-- Pedestrian model -->
        <model value="striping"/>
        <stripe-width value="0.8"/>
    </pedestrian>

    <emergency>
        <!-- Emergency vehicle behavior -->
        <blocking.time value="300"/>
        <jam-threshold value="10"/>
    </emergency>

    <output>
        <!-- Output files -->
        <summary value="summary.xml"/>
        <tripinfo value="tripinfo.xml"/>
        <vehroute value="vehroute.xml"/>
        <fcd-output value="fcd.xml"/>
        <queue-output value="queue.xml"/>
        <vtk-output value="vtk_output"/>
        <amitran value="amitran.xml"/>
    </output>
</configuration>